<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorred"
    xmlns:android="http://schemas.android.com/apk/res/android" >


<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="120sp"
    android:layout_marginRight="10sp"
    android:layout_marginLeft="10sp"
    android:layout_marginBottom="10sp"
    tools:context=".MapsActivity" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="      Where is Your shoot?? "
        android:gravity="center_vertical"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="55sp"
        android:background="@drawable/textmap"
        >
        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/loc"
            />
        <EditText
            android:layout_width="280sp"
            android:layout_height="match_parent"
            android:layout_marginStart="45sp"
            android:hint="Address"
            android:id="@+id/addressofmap"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp"

            />

        <Button
            android:layout_width="80sp"
            android:layout_height="40sp"
            android:id="@+id/register"
            android:background="@drawable/buttonrate"
            android:layout_marginStart="330sp"
            android:text="Next"
            android:textSize="10sp"
            android:textColor="@color/black"

            />


    </RelativeLayout>


</RelativeLayout>