<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackgrad"
    tools:context=".locationactivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="15sp"
        android:layout_alignParentTop="true"
        app:cardElevation="10sp"
        app:cardCornerRadius="5sp"
        app:cardBackgroundColor="@color/colorblue"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginTop="140sp"
            android:text="Select The Address Automatically"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#E6FFF6"/>

        <TextView
            android:layout_width="150sp"
            android:layout_height="60sp"
            android:layout_marginTop="100sp"
            android:textColor="@color/colorred"
            android:id="@+id/lo"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="1sp"
            android:layout_marginBottom="460sp"
            android:textColor="#E6FFF6"
            android:text="Current Location"
            android:textAlignment="center"
            android:textSize="25sp"
            android:background="@drawable/blackgrad"
            />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginStart="150sp"
            android:layout_marginTop="80sp"
            android:background="@drawable/currentlocat"
            android:layout_marginEnd="24dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentlocation"
            android:layout_marginStart="120sp"
            android:layout_marginTop="170sp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background"
            android:text="Get Location "
            android:textColor="#E6FFF6"/>




    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="260sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="280sp"
        android:layout_marginEnd="10sp"
        app:cardCornerRadius="5sp"
        app:cardElevation="10sp"
        app:cardBackgroundColor="@color/colorblue"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="1sp"
            android:layout_marginBottom="460sp"
            android:textColor="#E6FFF6"
            android:text="User Address"
            android:textAlignment="center"
            android:textSize="25sp"
            android:background="@drawable/blackgrad"
            />

        <EditText
            android:id="@+id/useraddress"
            android:layout_width="250sp"
            android:layout_height="60sp"
            android:layout_marginStart="60sp"
            android:textSize="20sp"
            android:hint="Enter Booking Address"
            android:background="@color/edit"
            android:layout_marginTop="80sp"
            android:layout_marginEnd="24dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/useraa"
            android:layout_height="wrap_content"
            android:layout_marginStart="120sp"
            android:layout_marginTop="170sp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background"
            android:text="Continue "
            android:textColor="#E6FFF6"/>



    </android.support.v7.widget.CardView>


</RelativeLayout>